<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Login</h1>
<p>Please login below.</p>

<%= form_tag(login_path) do %>

  <p><%= select_tag :user_type, options_for_select([["Teacher", "Teacher"], ["Student", "Student"], ["Parent", "Parent"]])%></p>

  <p><%= label_tag :email %>
  <%= email_field_tag :email %></p>

  <p><%= label_tag :password %>
  <%= password_field_tag :password %></p>

  <%= submit_tag "Log in" %>
<% end %>
